<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:gxt="urn:import:com.sencha.gxt.widget.core.client"
	xmlns:container="urn:import:com.sencha.gxt.widget.core.client.container">

	<ui:with type="it.lispa.bdl.client.images.Images" field="images" />

	<g:PopupPanel glassEnabled="false">
		<g:FlowPanel>
			<g:Grid ui:field='mygrid' cellSpacing='50'>
				<g:row>
					<g:customCell>
						<g:Image resource='{images.annulla}' />
					</g:customCell>
					<g:customCell>
						<g:Label>Caricamento...</g:Label>
					</g:customCell>
				</g:row>
			</g:Grid>
		</g:FlowPanel>
	</g:PopupPanel>

</ui:UiBinder>